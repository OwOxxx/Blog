---
import '../styles/global.css';

const { content } = Astro.props;
---

<html lang={content.lang || 'en'}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{content.title}</title>
		<style>
			.nav {
				border-bottom: 1px solid #ccc;
				margin-bottom: 40px;
				padding-bottom: 20px;
			}
			.nav > * + * {
				margin-left: 10px;
			}
		</style>
	</head>
	<body>
		<main class="content">
			<slot />
		</main>
	</body>
</html>

<style>
	* {
		padding: 0;
		margin: 0;
	}
	html {
		min-height: 100vh;
		background-image: url(src/assets/bark_willow_02_arm_4k.png);
	}
</style>
